@model List<LogOT.Application.Employees_Skill.Skill_EmployeeDTO>

<a>Add Skill</a>
<table>
    <thead>
        <tr>
            <th>Fullname</th>
            <th>Skill Name</th>
            <th>Skill Description</th>
            <th>Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.Employee.ApplicationUser.Fullname</td>
                <td>@item.Skill.SkillName</td>
                <td>@item.Skill.Skill_Description</td>
                <td>
                    <a asp-controller="EmployeeSkill" asp-action="Update" asp-route-id="@item.EmployeeId">Update</a>
                    <a>Delete</a>
                </td>
            </tr>
        </tbody>
    }
</table>

<a asp-controller="Employee" asp-action="Index">Return back</a>