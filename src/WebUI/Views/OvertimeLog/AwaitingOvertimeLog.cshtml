@using LogOT.Application.OvertimeLogs;
@model List<OvertimeLogDTO>;
<style>
	* {
		padding: 0px;
	}


	body {
		font-family: 'Trebuchet MS';
		font-size: 120%;
		margin: 50px;
	}

	hr {
		padding: 0px;
		border: none;
		height: 3px;
		background-color: #333;
	}


	a, a.visited, a.hover {
		font-weight: bold;
		text-decoration: underline;
		color: blue;
	}


		a.linkbutton {
			font-weight: bold;
			text-decoration: none;
			background-color: lightgray;
			color: black;
			padding: 6px;
			width: 120px;
			text-align: center;
			vertical-align: middle;
			letter-spacing: 1px;
		}


	.message {
		color: red;
		font-weight: bold;
	}

	input {
		padding: 3px;
		font-size: 90%;
		letter-spacing: 1px;
	}


	select {
		padding: 3px;
		font-size: 90%;
		letter-spacing: 1px;
	}

	table {
		font-family: inherit;
		font-size: inherit;
		border-collapse: collapse
	}

	td {
		padding: 10px;
	}

		td.right {
			padding: 10px;
			text-align: right;
			vertical-align: top;
			white-space: nowrap;
		}

		td.left {
			padding: 10px;
			text-align: left;
			vertical-align: top;
			white-space: nowrap;
		}

	th {
		padding: 10px;
		font-weight: bold;
	}

	textarea {
		padding: 3px;
		font-family: inherit;
		font-size: 90%;
		letter-spacing: 1px;
	}

	button {
		display: block;
		border: 0px solid lightgray;
		font-size: 90%;
		font-weight: bold;
		text-decoration: none;
		background-color: lightgray;
		color: black;
		padding: 6px;
		width: 120px;
		text-align: center;
		vertical-align: middle;
		letter-spacing: 1px;
	}

	.div-table {
		display: table;
		width: auto;
		border-spacing: 5px;
	}

	.div-row {
		display: table-row;
		width: auto;
		clear: both;
	}

	.div-col {
		display: table-cell;
	}

</style>

@{
	var parmsApproved = new Dictionary<string, string>
			{
				{ "Status", "Approved" },
			};
}

<a asp-controller="OvertimeLog" asp-action="Index" class="linkbutton">Select All</a>
<a asp-controller="OvertimeLog" asp-action="AwaitingOvertimeLog" class="linkbutton">Awaiting approval</a>
<a asp-controller="OvertimeLog" asp-action="ApprovedOvertimeLog" class="linkbutton">Approved</a>
<a asp-controller="OvertimeLog" asp-action="CancelOvertimeLog" class="linkbutton">Cancel</a>
<br />
<br />
<table border="1">
	<tr>
		<th>Id</th>
		<th>EmployeeId</th>
		<th>Date</th>
		<th>Hours</th>
		<th>Status</th>
		<th colspan="2">Action</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.EmployeeId</td>
			<td>@item.Date</td>
			<td>@item.Hours</td>
			<td>@item.Status</td>
			<td>
				<a asp-controller="OvertimeLog" asp-action="UpdateApprovedStatus"
			   asp-route-id="@item.Id" class="linkbutton">Approve</a>
			</td>
			<td>
				<a asp-controller="OvertimeLog" asp-action="UpdateCancelStatus"
			   asp-route-id="@item.Id" class="linkbutton">Cancel</a>
			</td>
		</tr>
	}
</table>