@using LogOT.Application.Common.Models;
@using LogOT.Domain.Entities;
@model List<LeaveLog>
<head>
    <style>
        .leave-log-title {
            color: blue;
            font-size: 24px;
            font-weight: bold;
        }

        .leave-log-table {
            width: 100%;
        }

            .leave-log-table th {
                background-color: lightgray;
                font-weight: bold;
            }

            .leave-log-table td {
                padding: 8px;
            }

        .btn {
            display: inline-block;
            padding: 6px 12px;
            margin-bottom: 0;
            font-size: 14px;
            font-weight: normal;
            line-height: 1.42857143;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            cursor: pointer;
            border: 1px solid transparent;
            border-radius: 4px;
            user-select: none;
        }

        .btn-primary {
            color: #fff;
            background-color: #337ab7;
            border-color: #2e6da4;
        }
    </style>
</head>
<h2 class="leave-log-title">Leave Log List</h2>

<a href="/EmployeeLeaveLog/Create?EmployeeId=2f7c5e6f-7d8a-4b33-bcc5-59d21e4c6d6e" class="btn btn-primary">Create Leave Log</a>
<br />
<br />
<table class="table leave-log-table">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leaveLog in Model)
        {
            <tr>
                <td>@leaveLog.StartDate.ToShortDateString()</td>
                <td>@leaveLog.EndDate.ToShortDateString()</td>
                <td>@leaveLog.Reason</td>
                <td>@leaveLog.Status</td>
                <td>
                    <a href="@Url.Action("Update", new { id = leaveLog.Id })" class="btn btn-primary">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
