@using LogOT.Application.LogOverTime.Commands.CreateLogOverTime;
@using LogOT.Domain.Enums;
@model CreateLogOvertimeCommand
<!DOCTYPE html>
<html>
<head>
    <title>Create OverTimeLogt</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #333;
        }

        label {
            display: block;
            margin-top: 10px;
        }

        input[type="text"],
        input[type="date"],
        textarea {
            width: 200px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button[type="submit"] {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h2>Create OverTimeLog</h2>

    <form action="Create" method="post">
        <label for="EmployeeId">Employee:</label>
        <input type="text" id="EmployeeId" name="EmployeeId" required>
        <br>

        <label for="Date">Date:</label>
        <input type="date" id="Date" name="Date" required>
        <br>

        <label for="Hours">Hours:</label>
        <input type="text" id="Hours" name="Hours" required>
        <br>

        <label for="Status">Status:</label>
        <textarea id="Job" name="Status" name="Status" required></textarea>
        <br>

        <label for="IsDeleted">IsDeleted:</label>
        <input type="checkbox" id="IsDeleted" name="IsDeleted" required>
        <br>

        <button type="submit">Create</button>
    </form>
</body>
</html>

